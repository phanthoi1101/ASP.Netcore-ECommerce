@model Supplier
@{
    ViewBag.Title = "Xoá khách hàng";
}

<div class=" box box-danger">
    <div class="box-body">
        <form action="~/Supplier/Delete/@Model.SupplierID" method="post">
            <div class="form-group">
                <label>Tên Nhà Cung Cấp:</label>
                <p class="form-control-static form-control">@Model.SupplierName</p>
            </div>   
            <div class="form-group">
                <label>Tên Công Ty:</label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static form-control">@Model.Address</p>
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>
            <div class="form-group">
                <p class="form-control-static form-control">Đang hoạt động</p>
            </div>
            <div class="form-group text-right">
                @if(!CommonDataService.InUsedSupplier(Model.SupplierID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xoá dữ liệu
                    </button>
                }
                    <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
