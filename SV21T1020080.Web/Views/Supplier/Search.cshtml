@model SV21T1020080.Web.Models.SupplierSearchResult
@{
    Layout = null;
}
<form>

    <p style="margin:10px 0 10px 0">Có <b> @Model.RowCount</b> Nhà cung cấp trong tổng số <b> @Model.PageCount</b> trang</p>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="bg-primary text-white">
                    <th>Tên nhà cung cấp</th>
                    <th>Tên công ty</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Tỉnh thành</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {

                    <tr>
                        <td>@item.SupplierName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Provice</td>
                        <td>
                            <div class="text-right">
                                <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <nav aria-label="Page navigation example" class=" text-center">
        <ul class="pagination justify-content-center">
            @for (var p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@p)">@p</a></li>
                }
            }
        </ul>
    </nav>
</form>